#include<iostream>
int main()
{
	int n,i,sum=0;
	printf("Enter the value of n= ");
	scanf("%d",&n);
	if(int(n) && n>0)
	{
		for(i=1;i<n;i++)
		{
			if(n%i==0)
			{
				sum=sum+i;
			}
		}
		if(sum==n)
		{
			printf("The given number is perfect number");
		}
		else
		{
			printf("the given number is not Perfet");
		}
	}
	else
	{
		printf("Invalid Input");
	}
}
